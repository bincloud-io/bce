<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>Binary Cloud Storage</display-name>
	<module-name>bcs</module-name>

	<servlet>
		<servlet-name>ContentLoadingServlet</servlet-name>
		<servlet-class>io.bcs.port.adapters.file.ContentLoadingServlet</servlet-class>
		<async-supported>true</async-supported>
	</servlet>

	<servlet-mapping>
		<servlet-name>ContentLoadingServlet</servlet-name>
		<url-pattern>/file-content</url-pattern>
	</servlet-mapping>
</web-app>
<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd">
	<access>FIELD</access>

	<!-- FILE ENTITY -->
	<entity class="io.bincloud.files.domain.model.File">
		<table name="FILE" />

		<attributes>
			<id name="fileId">
				<column name="FILE_ID" nullable="false" insertable="true"
					updatable="false" unique="true" />
			</id>

			<basic name="creationMoment">
				<column name="CREATION_MOMENT" nullable="false"
					insertable="true" updatable="false" unique="false" />
				<convert
					converter="io.bincloud.common.port.adapters.time.JPADateTimeConverter" />
			</basic>

			<basic name="lastModification">
				<column name="LAST_MODIFICATION" nullable="false"
					insertable="true" updatable="true" unique="false" />
				<convert
					converter="io.bincloud.common.port.adapters.time.JPADateTimeConverter" />
			</basic>

			<basic name="state">
				<column name="STATUS" nullable="false" insertable="true"
					updatable="true" unique="false" />
				<convert
					converter="io.bincloud.files.port.adapter.file.repository.JPAFileStateConverter" />
			</basic>
			<basic name="size">
				<column name="SIZE" nullable="false" insertable="true"
					updatable="true" unique="false" />
			</basic>
		</attributes>
	</entity>
</entity-mappings>

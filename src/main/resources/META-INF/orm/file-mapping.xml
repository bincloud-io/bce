<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd">
	<access>FIELD</access>

	<named-query name="FileRepository.findLatestResourceUpload">
		<query>select f from File f where f.resourceId = :resourceId order by f.creationMoment desc</query>
	</named-query>

	<!-- FILE ENTITY -->
	<entity class="io.bincloud.files.domain.model.File">
		<table name="FILE" />
		<id-class class="io.bincloud.files.domain.model.FileId" />

		<attributes>
			<id name="resourceId">
				<column name="RESOURCE_ID" nullable="false" insertable="true"
					updatable="false" unique="true" />
			</id>
			
			<id name="filesystemName">
				<column name="FILESYSTEM_NAME" nullable="false"
					insertable="true" updatable="false" unique="true" />
			</id>
			
			<basic name="fileName">
				<column name="FILE_NAME" nullable="false" insertable="true"
					updatable="true" unique="false" />
			</basic>
			
			<basic name="mediaType">
				<column name="MEDIA_TYPE" nullable="false" insertable="true"
					updatable="true" unique="false" />
			</basic>
			
			<basic name="contentDisposition">
				<column name="CONTENT_DISPOSITION" nullable="false" insertable="true"
					updatable="true" unique="false" />
			</basic>
			
			<basic name="creationMoment">
				<column name="CREATION_MOMENT" nullable="false"
					insertable="true" updatable="false" unique="false" />
				<convert
					converter="io.bincloud.common.port.adapters.time.JPADateTimeConverter" />
			</basic>

			<basic name="lastModification">
				<column name="LAST_MODIFICATION" nullable="false"
					insertable="true" updatable="true" unique="false" />
				<convert
					converter="io.bincloud.common.port.adapters.time.JPADateTimeConverter" />
			</basic>
			
			<basic name="state">
				<column name="STATUS" nullable="false" insertable="true"
					updatable="true" unique="false" />
				<convert
					converter="io.bincloud.files.port.adapter.file.repository.JPAFileStateConverter" />
			</basic>

			<basic name="fileSize">
				<column name="FILE_SIZE" nullable="false" insertable="true"
					updatable="true" unique="false" />
			</basic>
		</attributes>
	</entity>
</entity-mappings>
